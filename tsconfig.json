{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "jsx": "react",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "data/**/*.json"]
}
